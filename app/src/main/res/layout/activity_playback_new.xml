<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/playback_bg_cosmic_breath_gradient"
    tools:context=".PlaybackNewActivity">

    <!-- 中央能量唱片（建议叠加旋转 + 呼吸动画） -->
    <ImageView
        android:id="@+id/iv_disc"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/nav_logo"
        android:alpha="0.98"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- 能量光环（呼吸灯层） -->
    <View
        android:id="@+id/view_halo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/playback_bg_energy_halo"
        app:layout_constraintTop_toTopOf="@id/iv_disc"
        app:layout_constraintBottom_toBottomOf="@id/iv_disc"
        app:layout_constraintStart_toStartOf="@id/iv_disc"
        app:layout_constraintEnd_toEndOf="@id/iv_disc" />

    <!-- 歌曲名 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="undefined"
        android:textSize="22sp"
        android:textStyle="bold"
        android:letterSpacing="0.12"
        android:textColor="#A5F3FF"
        app:layout_constraintTop_toBottomOf="@id/iv_disc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp" />

    <!-- 播放进度条（霓虹渐变） -->
    <SeekBar
        android:id="@+id/seek_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/playback_seek_progress_gradient"
        android:thumb="@drawable/playback_seek_thumb_glow"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="22dp" />

    <!-- 播放控制区 -->
    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/seek_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <ImageButton
            android:id="@+id/btn_play_prev"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:src="@drawable/playback_ic_prev_glow" />

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/playback_bg_play_energy_button"
            android:src="@drawable/playback_ic_play_glow" />

        <ImageButton
            android:id="@+id/btn_play_next"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:src="@drawable/playback_ic_next_glow" />
    </LinearLayout>

    <!-- 音量控制（侧边能量条） -->
    <SeekBar
        android:id="@+id/seek_volume"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:progressDrawable="@drawable/playback_seek_volume_gradient"
        android:thumb="@drawable/playback_seek_thumb_glow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/layout_controls"
        app:layout_constraintBottom_toBottomOf="@id/layout_controls"
        android:layout_marginEnd="-48dp" />

    <!-- 播放模式切换 -->
    <LinearLayout
        android:id="@+id/layout_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="36dp">

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/btnModeOrder"
            android:background="@drawable/playback_bg_mode_inactive"
            android:src="@drawable/playback_ic_mode_order_selector"
            android:clickable="true"
            android:focusable="true" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:id="@+id/btnModeLoop"
            android:background="@drawable/playback_bg_mode_inactive"
            android:src="@drawable/playback_ic_mode_loop_selector" />

        <ImageButton
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:id="@+id/btnModeShuffle"
            android:background="@drawable/playback_bg_mode_inactive"
            android:src="@drawable/playback_ic_mode_shuffle_selector" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
