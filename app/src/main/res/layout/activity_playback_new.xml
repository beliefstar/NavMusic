<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playback_bg_cosmic_breath_gradient">

    <!-- 能量光环（在唱片下层） -->
    <View
        android:id="@+id/view_halo"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:background="@drawable/playback_bg_energy_halo"
        app:layout_constraintTop_toTopOf="@id/iv_disc"
        app:layout_constraintBottom_toBottomOf="@id/iv_disc"
        app:layout_constraintStart_toStartOf="@id/iv_disc"
        app:layout_constraintEnd_toEndOf="@id/iv_disc"/>

    <!-- 中央唱片 -->
    <ImageView
        android:id="@+id/iv_disc"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:src="@drawable/nav_logo"
        android:alpha="0.98"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- 歌曲名 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Song Title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#A5F3FF"
        android:letterSpacing="0.12"
        app:layout_constraintTop_toBottomOf="@id/iv_disc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <!-- 演唱者 -->
    <TextView
        android:id="@+id/tv_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textSize="16sp"
        android:textColor="#6FD6FF"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <!-- 歌词区域（核心：撑满中间空间） -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvLyrics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_artist"
        app:layout_constraintBottom_toTopOf="@id/seek_progress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"/>

    <!-- 播放进度 -->
    <SeekBar
        android:id="@+id/seek_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/playback_seek_progress_gradient"
        android:thumb="@drawable/playback_seek_thumb_glow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layout_controls"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"/>

    <!-- 播放控制区 -->
    <LinearLayout
        android:id="@+id/layout_controls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/layout_mode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/btn_play_prev"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:src="@drawable/playback_ic_prev_glow"/>

        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/playback_bg_play_energy_button"
            android:src="@drawable/playback_ic_play_glow"/>

        <ImageButton
            android:id="@+id/btn_play_next"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@android:color/transparent"
            android:src="@drawable/playback_ic_next_glow"/>
    </LinearLayout>

    <!-- 播放模式（贴底） -->
    <LinearLayout
        android:id="@+id/layout_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btnModeOrder"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/playback_bg_mode_inactive"
            android:src="@drawable/playback_ic_mode_order_selector"/>

        <ImageButton
            android:id="@+id/btnModeLoop"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:background="@drawable/playback_bg_mode_inactive"
            android:src="@drawable/playback_ic_mode_loop_selector"/>

        <ImageButton
            android:id="@+id/btnModeShuffle"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:background="@drawable/playback_bg_mode_inactive"
            android:src="@drawable/playback_ic_mode_shuffle_selector"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>